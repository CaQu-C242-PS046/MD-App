<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.profile.ProfileFragment">

    <!-- Profile Section -->
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp">

        <!-- Circular Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfilePicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pfp"
            android:layout_gravity="center"
            android:contentDescription="Profile Picture" />

        <!-- Edit Icon -->
        <ImageView
            android:id="@+id/ivEditProfile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="4dp"
            android:background="@drawable/bg_circle_blue"
            android:padding="6dp"
            android:src="@drawable/baseline_edit_square_24"
            app:tint="#9E9E9E" />
    </FrameLayout>

    <!-- Profile Name -->
    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Stats Section -->
    <TextView
        android:id="@+id/tvStatsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:padding="12dp"
        android:text="Stats"
        android:textColor="#9E9E9E"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/statsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivStatsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_account_box_24"
            app:tint="#ffff" />

        <TextView
            android:id="@+id/tvStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Awaiting recommendations..."
            android:textColor="#757575"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- General Settings Section -->
    <TextView
        android:id="@+id/tvGeneralSettingsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:padding="12dp"
        android:text="General Settings"
        android:textColor="#9E9E9E"
        android:textSize="14sp" />

    <!-- Change Password -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivChangePasswordIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_lock_24"
            app:tint="#9E9E9E" />

        <TextView
            android:id="@+id/tvChangePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="Change Password"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            app:tint="#9E9E9E" />
    </LinearLayout>

    <!-- Terms and Conditions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivTermsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_newspaper_24"
            android:tint="#9E9E9E" />

        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="Terms and Conditions"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            app:tint="#9E9E9E" />
    </LinearLayout>

    <!-- Log Out -->
    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#FF5722"
        android:text="Log Out"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</LinearLayout>
