<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42A5F5"
    tools:context=".regist.LoginPage">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/formCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_below="@id/logoImageView"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="-40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:elevation="4dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/rounded_card_background">

        <TextView
            android:id="@+id/loginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textSize="24sp"
            android:textColor="#42A5F5"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/loginSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_to_continue"
            android:textSize="14sp"
            android:textColor="#A0A0A0"
            android:gravity="center"
            android:fontFamily="@font/poppinsmedium"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#D3D3D3"
            android:hint="@string/username"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="text"
            android:background="@drawable/rounded_edittext_background" />

        <!-- Password Field with Show/Hide Icon -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#D3D3D3"
                android:hint="@string/password"
                android:paddingStart="16dp"
                android:paddingEnd="48dp"
                android:inputType="textPassword"
                android:background="@drawable/rounded_edittext_background" />

            <ImageView
                android:id="@+id/showHidePasswordIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_visibility_off_24"
            android:contentDescription="@string/show_hide_password" />
        </FrameLayout>

        <TextView
            android:id="@+id/forgotPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:text="@string/forgot_password"
            android:textSize="12sp"
            android:textColor="#42A5F5" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/or_login_using_other_method"
            android:textSize="12sp"
            android:textColor="#A0A0A0"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/googleSignInButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/google"
            android:contentDescription="@string/google_sign_in"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/don_t_have_an_account_sign_up_here"
            android:textSize="12sp"
            android:textColor="#A0A0A0"
            android:id="@+id/signupHereReg"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
